#include "qcom-ipq4018-wap-ac.dtsi"

/ {
	model = "MikroTik wAP R ac";
	compatible = "mikrotik,wap-r-ac";

	soc {
		tcsr@194b000 {
			/* select hostmode */
			compatible = "qcom,tcsr";
			reg = <0x194b000 0x100>;
			qcom,usb-hsphy-mode-select = <TCSR_USB_HSPHY_HOST_MODE>;
			status = "okay";
		};

		usb3@8af8800 {
			status = "okay";

			dwc3@8a00000 {
				phys = <&usb3_hs_phy>;
				phy-names = "usb2-phy";
			};
		};
	};
};

&tlmm {
	enable-usb-power {
		gpio-hog;
		gpios = <2 GPIO_ACTIVE_HIGH>;
		output-high;
		line-name = "enable USB power";
	};
};

&usb3_hs_phy {
	status = "okay";
};

&usb3 {
	status = "okay";
};
